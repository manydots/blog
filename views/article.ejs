<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %> - 个人文章</title>
    <link rel="stylesheet" type="text/css" href="/static/index.css">
    <link href="https://cdn.bootcss.com/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js"></script>
    <script src="/static/index.js"></script>
    <%- include('./header')%>
    <style>
        *:focus {outline: none; box-shadow:none !important;}
    </style>
</head>
<body>
    <% if (result) { %>
     <div class="container">
     	<%- include('./top')%>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">详情 >></li>
          </ol>
        </nav>
        <div class="row">
            <div class="col-md-9">
                <div class="jumbotron">
                  <h1 class="display-5"><%= result.title %></h1>
                  <p class="lead article-author">
                    作者：<%= result.author %> 最近修改：<%= fmt(result.modify_time) %>
                    <span class="badge badge-pill badge-info"><%= result.tags %></span>
                  </p>
                  <hr class="my-4">
                  <p class="article-context"><%= result.context %></p>
                 <!--  <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a> -->
                </div>
            </div>
            <div class="col-md-3">
                <div class="alert alert-secondary" role="alert">
                    最新文章
                </div>
                <% if (hotsList.length) { %>
                    <% hotsList.forEach(function(item,index){ %>
                        <span class="badge badge-pill badge-light">
                            <a href="/a/<%= item.id %>" style="color: #212529;text-decoration: none;"><%= item.title %></a>
                        </span>
                    <% }) %>
                <% } %>
            </div>
        </div>
        <%- include('./footer')%>
     </div>
    <% } %>
</body>
</html>